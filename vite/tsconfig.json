{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "composite": false,
        "declaration": true,
        "declarationDir": "dist",
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSources": false,
        "isolatedModules": true,
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "preserveWatchOutput": true,
        "skipLibCheck": true,
        "strict": false,
        "jsx": "react-jsx",
        "lib": [
            "ES2015",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "target": "es6",
        "baseUrl": ".",
        "paths": {
            "app/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}